<%- include('../../partials/header', { title: 'New Product' }) %>
<section class="card">
  <h2>New Product</h2>
  <form method="post" action="/admin/products" class="form">
    <label>Name
      <input type="text" name="name" required>
    </label>
    <label>Price
      <input type="number" name="price" step="0.01" min="0" value="0" required>
    </label>
    <label>Subcategory
      <select name="categoryId" required>
        <% subcats.forEach(c => { %>
          <option value="<%= c.id %>"><%= c.name %></option>
        <% }) %>
      </select>
    </label>
    <label>Description
      <textarea name="description" rows="3" placeholder="Optional"></textarea>
    </label>
    <button class="btn" type="submit">Create</button>
    <a class="btn secondary" href="/admin/products">Cancel</a>
  </form>
</section>
<%- include('../../partials/footer') %>
