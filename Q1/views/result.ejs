<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Submission Result</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="container">
    <h1>Submitted Details</h1>

    <table class="table">
      <tr><th>Username</th><td><%= data.username %></td></tr>
      <tr><th>Email</th><td><%= data.email %></td></tr>
      <tr><th>Gender</th><td><%= data.gender %></td></tr>
      <tr><th>Hobbies</th><td><%= data.hobbies.join(', ') %></td></tr>
      <tr>
        <th>Profile Picture</th>
        <td>
          <% if (data.profilePic) { %>
            <img src="<%= data.profilePic %>" alt="Profile" class="thumb" />
          <% } %>
        </td>
      </tr>
      <tr>
        <th>Other Pictures</th>
        <td class="thumbs">
          <% (data.otherPics || []).forEach(function(p){ %>
            <img src="<%= p %>" alt="Other" class="thumb" />
          <% }); %>
        </td>
      </tr>
    </table>

    <div class="form-row">
      <a class="button" href="/download/<%= downloadFile %>">Download JSON</a>
      <a class="button secondary" href="/">Back to Form</a>
    </div>
  </div>
</body>
</html>
