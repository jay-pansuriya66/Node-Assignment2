<%- include('../partials/header', { title: 'Edit Employee' }) %>
<section class="card">
  <h2>Edit Employee</h2>
  <form class="form" method="post" action="/employees/<%= emp._id %>">
    <input type="hidden" name="_method" value="PUT">
    <label>Name
      <input name="name" value="<%= emp.name %>" required>
    </label>
    <label>Email
      <input type="email" name="email" value="<%= emp.email %>" required>
    </label>
    <label>Role
      <input name="role" value="<%= emp.role %>">
    </label>
    <div class="row gap">
      <label>Base Salary
        <input type="number" step="0.01" name="baseSalary" value="<%= emp.baseSalary %>" required>
      </label>
      <label>Allowances
        <input type="number" step="0.01" name="allowances" value="<%= emp.allowances %>">
      </label>
      <label>Deductions
        <input type="number" step="0.01" name="deductions" value="<%= emp.deductions %>">
      </label>
    </div>
    <button type="submit">Save</button>
  </form>
</section>
<%- include('../partials/footer') %>
