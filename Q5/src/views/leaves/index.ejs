<%- include('../partials/head', { title: 'My Leaves' }) %>
<div class="card">
  <h2>My Leave Applications</h2>
  <a class="btn" href="/leaves/new">New Application</a>
  <table class="table">
    <thead>
      <tr>
        <th>Date</th>
        <th>Reason</th>
        <th>Granted</th>
        <th>Applied At</th>
      </tr>
    </thead>
    <tbody>
      <% if (leaves.length === 0) { %>
        <tr><td colspan="4" class="muted">No leave applications yet.</td></tr>
      <% } %>
      <% leaves.forEach(l => { %>
        <tr>
          <td><%= new Date(l.date).toDateString() %></td>
          <td><%= l.reason %></td>
          <td><%= l.grant ? 'Yes' : 'No' %></td>
          <td><%= new Date(l.createdAt).toLocaleString() %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
<%- include('../partials/foot') %>
